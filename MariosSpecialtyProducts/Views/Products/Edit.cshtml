@model MariosSpecialtyProducts.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="banner">
    <h1 class="title">Edit @Html.DisplayFor(model => Model.Name)</h1>
    </div>

    using (Html.BeginForm())
    {

        <div class="well">
            <div class="form-group row">
                <label class="col-md-2">Name of Product:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2">Cost:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Cost, new {@class="form-control"})
                </div>
            </div>
            <div class="form-group row">
                <label class="col-md-2">Country of Origin:</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.CountryOfOrigin, new {@class="form-control"})
                </div>
            </div>
            <input type="submit" value="Update" class="btn btn-default" />
        </div>
    }

    <p class="back">@Html.ActionLink("Back to Details", "Details", new{ productId = Model.ProductId })</p>
}
